<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/left_star"
               android:src="@drawable/star"
               android:layout_marginTop="13dp"
               android:layout_marginLeft="64dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/first_layout"
                  android:gravity="center"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toRightOf="@id/left_star">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:id="@+id/image_Barcelona"
                   android:src="@drawable/barcelona"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Barcelona"
                  android:textSize="12dp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/second_layout"
                  app:layout_constraintTop_toTopOf="parent"
                  android:orientation="vertical"
                  android:gravity="center"
                  app:layout_constraintLeft_toRightOf="@id/first_layout"
                  app:layout_constraintRight_toLeftOf="@id/third_layout"
                 >

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="25sp"
                  android:textColor="@android:color/black"
                  android:text="5 : 2"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="79'"
                  android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/third_layout"
                  android:gravity="center"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintRight_toLeftOf="@id/right_star">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:id="@+id/image_Huesca"
                   android:src="@drawable/huesca"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Huesca"
                  android:textSize="12dp"/>
    </LinearLayout>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/right_star"
               android:src="@drawable/star"
               android:layout_marginTop="13dp"
               android:layout_marginRight="64dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>